{
  "compilerOptions": {
    "target": "ES2018",              // Target a modern JavaScript version
    "module": "ESNext",              // Compile to ES modules
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,  // Enable TypeORM decorators
    "emitDecoratorMetadata": true,   // Emit metadata for decorators
    "moduleResolution": "node",
    "outDir": "./dist",              // Output compiled files to dist
    "rootDir": "./",              // Set root directory for source files
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,         // Enable compatibility with CommonJS
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}